doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
  body.room-details__body    
    +header(headerConfig)
    //.swiper
      .swiper-wrapper
        .swiper-slide
          img(src=require("./img/image3.png"), alt="")
          //.container Лучшие номера для вашей работы, отдыха и просто вдохновения
        .swiper-slide
          img(src=require("./img/image2.png"), alt="")
          //.container
        .swiper-slide
          img(src=require("./img/image.png"), alt="")
          //.container
      .container
        .swiper-text Лучшие номера для вашей работы, отдыха и просто вдохновения
    .content
      .galery
        img(src = require("./img/room888_1.jpg"), alt="")
        img(src = require("./img/room888_2.jpg"), alt="")
        img(src = require("./img/room888_3.jpg"), alt="")
      .container.room-details
        section.room-details__information
          section.room-details__details
            h2.room-details__subtitle Впечатления от номера
            +room-detail({details: [{label: 'Комфорт', text: 'Шумопоглощающие стены', theme: 'emoticon',},{label: 'Удобство', text: 'Окно в каждой из спален', theme: 'city',},{label: 'Уют', text: 'Номер оснащён камином', theme: 'fair',}]})
          section.room-details__chart
            h2.room-details__subtitle Сведения о номере
            +chart()
          section.room-details__feedbacks
            .room-details__feedbacks-title
              h2 Отзывы посетителей номера
              span.room-details__feedbacks-quantity 2 отзыва
            +feedback({imgsrc: './img/feedback1.jpg', name: 'Мурад Сарафанов', lastEntr: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', likes: 12})
            +feedback({imgsrc: './img/feedback2.jpg', name: 'Патрисия Стёклышкова', lastEntr: 'Неделю назад', text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент.', likes: 2})
          section.room-details__rules
            h2.room-details__subtitle Правила
            +bullet-list({items: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']})
          section.room-details__cancel
            h2.room-details__subtitle Отмена
            p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
          //section
          form.room-details__form(action="")
            .catalog__elementGlue
              .catalog__elementText
                span.width_bold.color_black №
                span.width_bold.size_large.color_black &nbsp;888
                span.width_bold.color_primary.size_small &nbsp; Люкс
              .catalog__elementText
                span.width_bold 9 999₽
                span.size_small &nbsp;в сутки
            +date-dropdown({label: ['Прибытие', 'Выезд']})
            +dropdown({label: 'Гости', placeholder: 'Сколько гостей', name: 'guest-dropdown', items: [{text: 'взрослые', group: 'гости'}, {text: 'дети', group: 'гости'}, {text: 'младенцы'}]})
            .room-details__form-field
              .room-details__form-text
                .room-details__form-info
                  span.room-details__form-label 9 990₽ х 4 суток
                span.room-details__form-number 39 960₽
              .room-details__form-text
                .room-details__form-info
                  span.room-details__form-label Сбор за услуги: скидка 2 179₽
                  .room-details__form-prompt
                span.room-details__form-number 0₽
              .room-details__form-text
                .room-details__form-info
                  span.room-details__form-label Сбор за дополнительные услуги
                  .room-details__form-prompt
                span.room-details__form-number 300₽
            .room-details__form-total
              .room-details__form-text
                span.room-details__form-label Итого
                .room-details__dots
                span.room-details__form-number 38 081₽
            +button({text: 'Забронировать', theme: ['fill', 'wide', 'arrowed'], href: '#undef'})
    +footer()