mixin subscrTextField([label, mod=[]])
  .form__text-field-div 
    label.form__label #{label}
    .form__text-field-glue
      input(type="email", name=name, placeholder='Email', pattern="[^@\s]+@[^@\s]+\.[^@\s]+", required, class="form__text-field form__text-field_subscr" class = mod)
      button(type="submit", class="form__subscrSubmit")

mixin exCheckboxList([label, cbNames=[]])
