mixin richCheckboxList(label = "Rich checkbox list", rcbNames = [["rcbLabel1", "rcbText1"], ["rcbLabel2", "rcbText2"]])
  .form__checkbox-list
    .form__label(type="button") #{label}
    ul.form__checkbox-list
      each n in rcbNames
        li
          label.form__checkbox-list-el
            input.form__checkbox(type="checkbox")
            .form__checkbox-list-label.form__richCheckbox
              .form__richCheckboxLabel #{n[0]}
              .form__richCheckboxText #{n[1]}              
        
mixin radioButtons([label, btlabels = []])
  .form__radioButtonsDiv
    .form__label #{label}
    .form__radioButtons
      each eb in btlabels
        label.form__radioButton
          input(type = "radio" name="radio")
          .form__rblabel #{eb}

mixin toggleButtons([label, btlabels = []])
  .form__toggleButtonsDiv
    .form__label #{label}
    .form__toggleButtons
      each eb in btlabels
        label.form__toggleButton
          input.form__checkbox(type = "checkbox")
          .form__tblabel #{eb}

