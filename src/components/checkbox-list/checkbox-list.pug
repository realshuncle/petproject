mixin checkbox-list(config = {})
  - defaultConfig = {rich: false, expandable: false, label: 'checkbox-list',  name: 'checkbox-list', items: [{text: 'label1', sign: 'text1'}, {text: 'label2', sign: 'text2'}]};
  - config = Object.assign(defaultConfig, config);
  .checkbox-list(data-expandable = config.expandable)
    - let hidden = config.expandable ? 'checkbox-list__menu_hidden' : false;
    if (config.expandable)
      button.checkbox-list__button.checkbox-list__button_closed(type = 'button') #{config.label}
    else
      .checkbox-list__button #{config.label}  
    ul.checkbox-list__menu(class = hidden)
      each item in config.items
        li.checkbox-list__item
          label.checkbox-list__label
            input.checkbox-list__checkbox(type="checkbox")
            if (config.rich)
              .checkbox-list__checkbox-label
                .checkbox-list__text_bold #{item.text}
                .checkbox-list__text_sign #{item.sign} 
            else
              .checkbox-list__checkbox-label               
                .checkbox-list__text #{item.text}